<link rel="stylesheet" href="css/forms.css">

<main>
    <center>
        <img class="responsive-img" id="logo" src="img/school_pool_logo_white.png" />


        <h3 class="pleaseLogIn">Create an Account</h3>
        <p>Or Login <a href="/login">here</a></p>

        <div class="container">
            <!-- <div id="form"> -->

            <form class="col s12 signup" id="signupFrm" method="post">
                <div class='row'>
                    <div class='input-field col s6'>
                        <input class='validate' type="text" name='firstname' id='firstname' />
                        <label for='firstname'>Enter your first name</label>
                    </div>
                    <div class='input-field col s6'>
                        <input class='validate' type="text" name='lastname' id='lastname' />
                        <label for='lastname'>Enter your last name</label>
                    </div>
                </div>
                <div class='row'>
                    <div class='input-field col s6'>
                        <input class='validate' type='email' name='email' id='email' />
                        <label for='email'>Enter your email</label>
                    </div>
                    <div class='input-field col s6'>
                        <input class='validate' type='number' name='mobile' id='mobile' />
                        <label for='mobile'>Enter your mobile number</label>
                    </div>
                </div>

                <div class='input-field col s12'>
                    <input class='validate' type="text" name='username' id='username' />
                    <label for='username'>Enter your desired username</label>
                </div>
        </div>

        <div class='row'>
            <div class='input-field col s12'>
                <input class='validate' type='password' name='password' id='password' />
                <label for='password'>Enter your password</label>
            </div>
        </div>

        <div class='row'>
            <div class='input-field col s12'>
                <input class='validate' type='password' name='passwordval' id='passwordval' />
                <label for='passwordval'>Confirm your password</label>
            </div>
        </div>



        <center>
            <div class='row'>
                <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'
                    id='btn_login'>Sign Up</button>
            </div>
        </center>
        </form>
        <!-- </div> -->
        </div>
    </center>


</main>
